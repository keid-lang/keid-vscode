{
    "name": "keid-vscode",
    "displayName": "Keid",
    "author": {
        "name": "Lucas Baizer"
    },
    "publisher": "lucasbaizer",
    "description": "Syntax highlighting and language server for the Keid language",
    "repository": {
        "type": "git",
        "url": "https://github.com/LucasBaizer2/keid"
    },
    "bugs": {
        "url": "https://github.com/LucasBaizer2/keid/issues"
    },
    "icon": "images/logo.png",
    "license": "MIT",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "keid",
                "aliases": [
                    "Keid",
                    "keid"
                ],
                "extensions": [
                    ".keid"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/logo.png",
                    "dark": "./images/logo.png"
                }
            },
            {
                "id": "keidmd-injection"
            }
        ],
        "grammars": [
            {
                "language": "keid",
                "scopeName": "source.keid",
                "path": "./syntaxes/keid.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && yarn install && cd ..",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@vscode/vsce": "^2.17.0",
        "typescript": "^4.5.5"
    }
}
